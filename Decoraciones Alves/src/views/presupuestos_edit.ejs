    <!--Material Design Bootstrap-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.3.0/mdb.min.css"rel="stylesheet"/>
    <link rel="stylesheet" href="../../stylesheets/mdbootstrap/mdb.min.css"> 
    <!--- STYLE PERSONALIZADO --> 
    <link rel="stylesheet" href="../../stylesheets/personalizado/style.css"> 
    <link rel="stylesheet" href="../../stylesheets/personalizado/navbar_color.css">
    <!-- Style DataTable-->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.css">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet"/>
    <!--Logo de Decoraciones Alves-->
    <link rel="shortcut icon" href="../../images/logo/decoalves.png">
 </head>

 <body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="../../images/logo/decoalves.png" alt="" width="70" height="60" class="d-inline-block align-center">
                    <h1 class=""> Decoraciones Alves</h1>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link disabled" aria-current="page" href="usuarios">Usuarios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled" href="productos">Productos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled" href="clientes">Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled" href="ventas">Ventas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active select" href="/presupuestos">Presupuetos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled" href="proveedores">Proveedores</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <div class="card border-primary">
            <div class="card-header">Editar Registro</div>
            <div class="card-body">
                <form action="/presupuestos/update/<%= data.id %>" method="POST">
                    <div class="mb-3">
                        <label for="cliente" class="form-label">Cliente</label>
                        <input type="text" class="form-control" value="<%= data.cliente %>" id="cliente" name="cliente" tabindex="1" required>
                    </div>
                    <div class="mb-3">
                        <label for="direccion" class="form-label">Dirección</label>
                        <input type="text" class="form-control" value="<%= data.direccion %>" id="direccion" name="direccion" tabindex="2" required>
                    </div>
                    <div class="mb-3">
                        <label for="telefono" class="form-label">Teléfono</label>
                        <input type="text" class="form-control" placeholder="Ejemplo:+58 4248975412" value="<%= data.telefono %>" id="telefono" name="telefono" tabindex="3" required>
                    </div>
                    <div class="mb-3">
                        <label for="emision" class="form-label">Fecha de Emisión</label>
                        <input type="date" class="form-control" placeholder="dd / mm / aaaa" value="<%= data.emision %>" id="emision" name="emision" tabindex="4" required>
                    </div>
                    <div class="mb-3">
                        <label for="descripcion" class="form-label">Descripción</label>
                        <input type="text" class="form-control" value="<%= data.descripcion %>" id="descripcion" name="descripcion" tabindex="5" required>
                    </div>
                    <div class="mb-3">
                        <label for="total" class="form-label">Total</label>
                        <input type="text" class="form-control" value="<%= data.total %>" id="total" name="total" tabindex="6" required>
                        <small>Ingrese los decimales con un "." hasta un maximo de dos (2) decimales. (Total en divisas)</small>
                    </div>
                    <button type="submit" class="btn btn-primary" tabindex="7">Guardar</button>
                    <a href="/presupuestos" class="btn btn-danger">Cancelar</a>
                </form>
            </div>
        </div>
    </div>



    <!-- jQuery --> 
    <script type="text/javascript" src="../../javascripts/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap and Popper,core JavaScript and Bootstrap tooltips-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
    <!--DataTables JS -->
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.js"></script>
    <!-- MDB core JavaScript (Usado para el NavBar) -->
    <script type="text/javascript" src="../../javascripts/mdbootstrap/mdb.min.js"></script>
    <!-- MDB-KIT Javascript-->
    <script type="text/javascript"src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.3.0/mdb.min.js"></script>
    
 </body>   
</html>
    